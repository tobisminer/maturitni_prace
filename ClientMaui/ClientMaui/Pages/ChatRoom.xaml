<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientMaui.ChatRoom"
             Title="ChatRoom">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label 
                Grid.Column="1"
                x:Name="HeaderLabel"
                Text="Ultimate chatting room"
                Style="{StaticResource Headline}"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Button 
                Grid.Column="2"
                x:Name="SwitchModeButton" 
                WidthRequest="150"
                HeightRequest="10" 
                HorizontalOptions="End" 
                VerticalOptions="Center"
                Clicked="SwitchModeButton_OnClicked" 
                Height="10" 
                Margin="10"
                BackgroundColor="#80FFFFFF"
                Text="KlasickÃ½ reÅ¾im"
                ></Button>
        </Grid>

        <Grid Grid.Row="1" RowDefinitions="*">
            <ScrollView x:Name="ScrollView" Scrolled="ScrollView_OnScrolled" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <VerticalStackLayout  x:Name="MessagesStack" Spacing="10" Margin="10,0,10,0"/>
            </ScrollView>
        </Grid>
        
        <Grid VerticalOptions="End" Grid.Row="2" Margin="30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Entry x:Name="MessageEntry" Placeholder="Type your message here" Margin="0,0,10,0" Focused="MessageEntry_OnFocused" Unfocused="MessageEntry_OnUnfocused"></Entry>
            <Button x:Name="SendButton" Grid.Column="1" Text="ðŸ‘‰" Clicked="SendButton_OnClicked"></Button>

        </Grid>
    </Grid>
  
</ContentPage>