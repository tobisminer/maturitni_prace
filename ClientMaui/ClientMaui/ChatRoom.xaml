<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ClientMaui.ChatRoom"
             Title="ChatRoom">
    <VerticalStackLayout>
        <Label 
            Text="Ultimate chatting room"
            Style="{StaticResource Headline}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <VerticalStackLayout x:Name="MessagesStack"></VerticalStackLayout>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Entry x:Name="MessageEntry" Grid.Row="1" Placeholder="Type your message here"></Entry>
            <Button x:Name="SendButton" Grid.Row="1" Grid.Column="1" Text="Send" Clicked="SendButton_OnClicked"></Button>

        </Grid>

    </VerticalStackLayout>
</ContentPage>